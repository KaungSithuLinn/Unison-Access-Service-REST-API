{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.EventLog"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning",
        "UnisonRestAdapter": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {CorrelationId} {SourceContext}: {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/unison-adapter-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {CorrelationId} {SourceContext}: {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId",
      "WithEnvironmentName"
    ],
    "Properties": {
      "ApplicationName": "UnisonRestAdapter",
      "Environment": "Development"
    }
  },
  "AllowedHosts": "*",
  "Unison": {
    "ServiceUrl": "http://192.168.10.206:9003/Unison.AccessService",
    "WsdlUrl": "http://192.168.10.206:9003/Unison.AccessService?wsdl",
    "TimeoutSeconds": 30,
    "RetryAttempts": 3,
    "RetryDelayMs": 1000,
    "EnableDetailedLogging": true
  },
  "HttpClientOptions": {
    "MaxConnectionsPerEndpoint": 100,
    "ConnectionTimeoutSeconds": 30,
    "RequestTimeoutSeconds": 120,
    "PooledConnectionLifetimeSeconds": 600,
    "PooledConnectionIdleTimeoutSeconds": 90,
    "MaxAutomaticRedirections": 10,
    "EnableConnectionPooling": true,
    "EnableKeepAlive": true,
    "TcpKeepAliveTime": 7200,
    "TcpKeepAliveInterval": 75
  },
  "RequestTracing": {
    "LogRequests": true,
    "LogResponses": true,
    "LogHeaders": false,
    "LogBody": true,
    "MaxBodySize": 32768,
    "SensitiveHeaders": ["Authorization", "Unison-Token", "Cookie"],
    "SensitiveBodyPaths": ["$.password", "$.token", "$.secret"]
  },
  "Security": {
    "TokenConfigSection": "Security",
    "EncryptionKey": "${UNISON_ENCRYPTION_KEY}",
    "EncryptTokensInStorage": true,
    "AllowFallbackToken": false,
    "FallbackToken": "${UNISON_FALLBACK_TOKEN}",
    "ValidTokens": [],
    "TokenExpiryHours": 24,
    "EnableTokenRotation": true,
    "MaxRequestsPerHour": 1000,
    "EnableRateLimiting": true,
    "MaxRequestsPerMinute": 100,
    "RateLimitWindowMinutes": 1,
    "TemporaryBlockDurationMinutes": 15,
    "AllowedIpAddresses": [],
    "EnableIpWhitelist": false,
    "LogSecurityEvents": true,
    "BlockSuspiciousRequests": true,
    "RequireHttps": true,
    "EnableHsts": true,
    "HstsMaxAge": 31536000,
    "EnableCors": false,
    "AllowedOrigins": ["https://localhost", "https://127.0.0.1"],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "AllowedHeaders": ["Authorization", "Content-Type", "X-Requested-With"],
    "MaxRequestSizeBytes": 1048576,
    "EnableApiKeyAuthentication": true,
    "ApiKeyHeaderName": "Unison-Token",
    "EnableRequestValidation": true,
    "BlockMaliciousPatterns": true,
    "EnableContentSecurityPolicy": true
  }
}
